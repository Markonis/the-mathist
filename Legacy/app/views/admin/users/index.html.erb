<h1>Listing users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Mail</th>
      <th>Last login</th>
      <th>Login count</th>
      <th>Drive requests count</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.mail %></td>
        <td><%= user.last_login %></td>
        <td><%= user.login_count %></td>
        <td><%= user.drive_requests_count %></td>
        <td><%= link_to 'Show', [:admin, user] %></td>
        <td><%= link_to 'Edit', edit_admin_user_path(user) %></td>
        <td><%= button_to "delete", [:admin, user], :method=>:delete%></td>
      </tr>
    <% end %>
  </tbody>
</table>